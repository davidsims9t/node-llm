{
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    },
    "compilerOptions": {
        "strict": true,
        "rootDirs": ["src"],
        "outDir": "dist",
        "lib": ["ESNext"],
        "target": "ESNext",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "types": ["node"]
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}